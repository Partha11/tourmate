<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.TourMate" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorTeal</item>
        <item name="colorPrimaryDark">@color/colorTeal</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="Theme.TwainArc.Toolbar.Icon" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="Theme.TwainArc.Toolbar.TextAppearance" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:maxLength">60</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Widget.TwainArc.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="hintTextColor">@color/color_primary</item>
    </style>

    <style name="Widget.TwainArc.TabTextAppearance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorOnSurface">@color/color_primary</item>
        <item name="textAppearanceCaption">@style/TextAppearance.App.Caption</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
    </style>

    <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="CollapsingToolbar.ExpandedTextStyle.Small" parent="Theme.TourMate">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="CollapsingToolbar.CollapsedTextStyle.Small" parent="Theme.TourMate">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/color_accent</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="CollapsingToolbar.ExpandedTextStyle.Large" parent="Theme.TourMate">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="CollapsingToolbar.ExpandedTextStyle.Large.Visible" parent="Theme.TourMate">
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="CollapsingToolbar.CollapsedTextStyle.Large" parent="Theme.TourMate">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="ShapeAppearanceOverlay.LeftTop" parent="">
        <item name="cornerSizeTopLeft">12dp</item>
        <item name="cornerSizeTopRight">12dp</item>
        <item name="cornerSizeBottomLeft">12dp</item>
        <item name="cornerSizeBottomRight">12dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="SwitchTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorControlActivated">@color/color_accent</item>
        <!--        <item name="colorSwitchThumbNormal">#f1f1f1</item>-->
        <!--        <item name="android:colorForeground">#42221f1f</item>-->
    </style>

    <style name="Slider.ToolTip" parent="Widget.MaterialComponents.Tooltip">
        <item name="shapeAppearanceOverlay">@style/ShapeOverlay</item>
        <item name="backgroundTint">@color/color_accent</item>
    </style>

    <style name="ShapeOverlay">
        <item name="cornerSize">50%</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/pop_up</item>
        <item name="android:windowExitAnimation">@anim/pop_off</item>
    </style>
</resources>