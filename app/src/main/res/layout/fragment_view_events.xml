<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ViewEventsFragment">

    <EditText
        android:id="@+id/searchEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColorHint="@color/colorGray"
        android:drawableLeft="@drawable/ic_search"
        android:paddingLeft="20sp"
        android:layout_margin="20sp"
        android:inputType="textAutoComplete"/>

    <ListView
        android:id="@+id/viewEventsList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/searchEvent"/>

    <io.github.kobakei.materialfabspeeddial.FabSpeedDial
        android:id="@+id/fabEvents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="45dp"
        app:fab_fabBackgroundColor="@color/colorLimeGreen"
        app:fab_miniFabBackgroundColor="@color/colorLimeGreen"
        app:fab_miniFabTextColor="@color/colorWhite"
        app:fab_menu="@menu/fab"/>

</RelativeLayout>