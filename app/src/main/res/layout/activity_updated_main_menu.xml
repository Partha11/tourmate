<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdatedMainMenuActivity">

    <co.ceryle.radiorealbutton.RadioRealButtonGroup
        android:id="@+id/radioButtonGroup"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:rrbg_animateDrawables_enter="overshoot"
        app:rrbg_animateDrawables_exit="bounce"
        app:rrbg_animateTexts_enter="overshoot"
        app:rrbg_animateTexts_exit="bounce"
        app:rrbg_animateDrawables_duration="300"
        app:rrbg_radius="10dp"
        app:rrbg_selectorColor="@color/colorPrimaryDark"
        app:rrbg_selectorRadius="3dp"
        android:layout_centerHorizontal="true">

        <co.ceryle.radiorealbutton.RadioRealButton
            android:id="@+id/viewEventsButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:weightSum="1"
            app:rrb_drawable="@drawable/ic_event_blue" />

        <co.ceryle.radiorealbutton.RadioRealButton
            android:id="@+id/viewExpenseButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:weightSum="1"
            app:rrb_drawable="@drawable/ic_event_blue"/>

    </co.ceryle.radiorealbutton.RadioRealButtonGroup>

    <FrameLayout
        android:id="@+id/updatedFragmentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/radioButtonGroup"/>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="?android:attr/windowBackground"
        android:layout_alignParentBottom="true"
        app:menu="@menu/navigation" />

</RelativeLayout>