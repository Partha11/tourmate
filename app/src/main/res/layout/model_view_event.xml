<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_80sdp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/card_bg"
    android:layout_margin="@dimen/_5sdp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/event_thumb"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:layout_margin="@dimen/_5sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@mipmap/ic_launcher"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/event_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Event Title"
        android:textSize="@dimen/_11sdp"
        android:layout_margin="@dimen/_5sdp"
        android:layout_toEndOf="@id/event_thumb"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/event_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Friday"
        android:textSize="@dimen/_9sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_toEndOf="@id/event_thumb"
        android:layout_alignParentBottom="true"
        android:visibility="gone"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/event_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Dhaka"
        android:textSize="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_toEndOf="@id/event_thumb"
        android:layout_below="@id/event_title"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/event_start_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Starts: 12 Dec 2019"
        android:textSize="@dimen/_9sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_toEndOf="@id/event_thumb"
        android:layout_alignParentBottom="true"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/event_details_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        android:textAllCaps="false"
        android:text="@string/app_name"
        android:visibility="gone"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/eventTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Event Title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/eventFromDateFixed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From"
        android:textSize="20sp"
        android:layout_below="@+id/eventTitle"
        android:layout_marginLeft="10dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/eventFromDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.1.2018"
        android:textSize="20sp"
        android:layout_below="@+id/eventFromDateFixed"
        android:layout_marginLeft="10dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/eventToDateFixed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To"
        android:textSize="20sp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/eventTitle"
        android:layout_marginRight="10dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/eventToDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10.1.2018"
        android:textSize="20sp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/eventToDateFixed"
        android:layout_marginRight="10dp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eventFromDate"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/eventEstimatedBudgetFixed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estimated Budget: "
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/eventEstimatedBudget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3000 Tk"
            android:textSize="20sp"/>

    </LinearLayout>

</RelativeLayout>